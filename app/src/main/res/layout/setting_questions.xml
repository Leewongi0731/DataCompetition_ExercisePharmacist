<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/settingQuestionsBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back_key"
            android:backgroundTint="@color/custom_red" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="문의사항"
            android:textColor="@color/black"
            android:textSize="25sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    android:text="문의사항"
                    />

                <EditText
                    android:id="@+id/settingSendContents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="8"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:ems="10"
                    android:hint="내용을 입력하세요."
                    android:gravity="start"
                    android:background="@drawable/black_text_box"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    android:text="답변받을 이메일"
                    />

                <EditText
                    android:id="@+id/settingSendEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:padding="5dp"
                    android:hint="이메일을 입력하세요."
                    android:gravity="start"
                    android:background="@drawable/black_text_box"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    android:text="첨부파일"
                    />

                <EditText
                    android:id="@+id/settingSendFileBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:padding="5dp"
                    android:hint="파일등록"
                    android:gravity="start"
                    android:background="@drawable/black_text_box"
                    />

                <Button
                    android:id="@+id/settingSendBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"

                    android:padding="15dp"
                    android:text="보내기"
                    android:backgroundTint="@color/custom_red" />

            </LinearLayout>

    </ScrollView>

</LinearLayout>