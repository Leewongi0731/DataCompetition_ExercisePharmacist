<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pale_gray">

    <TextView
        android:id="@+id/textViewMedal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="금상"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"/>

    <ImageView
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_medal"
        android:background="@drawable/ic_medal_background"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/healthTestUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="강순자"
                android:textSize="40sp"
                android:textColor="@color/navy"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/healthTestUserPositionAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="서울 79세"
                android:textSize="20sp"
                android:textColor="@color/navy"
                android:gravity="center"
                android:layout_marginTop="20dp"
                />

            <Button
                android:id="@+id/healthTestDetailTestBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:padding="15dp"
                android:text="정밀측정 신청하기"
                android:backgroundTint="@color/custom_red"
                />

            <Button
                android:id="@+id/healthTestMainBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:padding="15dp"
                android:text="메인으로"
                android:backgroundTint="@color/custom_red"
                />

        </LinearLayout>

    </ScrollView>
</LinearLayout>