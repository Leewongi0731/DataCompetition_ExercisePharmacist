<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    >


    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/videoSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/textViewVideoTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <ImageButton
            android:id="@+id/imageViewVideoBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_video_back"
            android:padding="25dp"
            android:backgroundTint="#00000000"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/imageViewVideoStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_video_start"
            android:backgroundTint="#00000000"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/imageViewVideoFront"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_video_front"
            android:padding="25dp"
            android:backgroundTint="#00000000"
            android:layout_weight="1"
            />

    </LinearLayout>


</LinearLayout>